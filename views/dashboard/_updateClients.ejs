<% if (clients) { %>
    <div class="contenedor">
        <div class="row" id="fondo">
            <form action="/api/clients/update" method="post" id="formu">
                <input type="text" name="id" value="<%= clients._id %>" hidden>
                <h4>Actualizar Clientes</h4>
                <div class="row">
                    Nombre: <input type="text" name="name" value="<%= clients.name %>" required>
                    Apellido: <input type="text" name="lastname" value="<%= clients.lastname %>">
                </div>
                <div class="row">
                    Correo: <input type="email" name="email" value="<%= clients.email %>" required>
                    Carnet: <input type="text" name="identity_card" value="<%= clients.identity_card %>" required>
                </div>
                <div class="row">
                    Usuario: <input type="text" name="user" value="<%= clients.user %>" required>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>

    </div>

    <% } %>