<% if (branches) { %>
    <%- include('nav.ejs', {branches: branches, comments: comments}) -%>
        <% } %>
    <!-- espacio para informacion del producto -->
    <div class="container mb-5">
        <% products.forEach((data)=> { %>
        <p class="fs-1 text-center"><%= data.product %></p>
        <div class="row mt-3">
            
            <div class="col-7 mt-3">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/<%=data.image%>" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/not found.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/not found.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-5">
                <div class="row mt-3 ms-3">
                    <p class="fs-2">Precio: $<%= data.price %></p>
                </div>
                <div class="row ms-3">
                    <div class="col">
                        <div class="d-grid gap-2 mx-auto">
                            <button class="btn btn-outline-dark" onclick="addcart()" type="submit">Añadir al
                                carrito</button>
                        </div>
                    </div>
                </div>
                <div class="row ms-3 mt-3">
                    <div class="col-4">
                        <div class="list-group" id="list-tab" role="tablist">
                            <a class="list-group-item list-group-item-action active bg-light border-dark"
                                id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab"
                                aria-controls="list-home">Especificaciones</a>
                            <a class="list-group-item list-group-item-action bg-light border-dark"
                                id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab"
                                aria-controls="list-profile">Caracteristicas</a>
                            <a class="list-group-item list-group-item-action bg-light border-dark"
                                id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab"
                                aria-controls="list-messages">Mas informacion</a>
                        </div>
                    </div>
                    <div class="col-8 bg-dark">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                                aria-labelledby="list-home-list">Lavadora con capacidad de 44 lb  tecnología Smart Inverter que controla de manera eficiente el consumo de energía. 

                                Smart Motion para un lavado más óptimo en todo tipo de prendas gracias a los tres tipos de movimiento creados por Smart Inverter</div>
                            <div class="tab-pane fade" id="list-profile" role="tabpanel"
                                aria-labelledby="list-profile-list">Carga superior
                                Color gris oscuro
                                Panel LED
                                Tina de acero inoxidable
                                Tapa de vidrio templado
                                8 programas de lavadoMotor Smart Inverter
                                Sistema de lavado TurboDrum™
                                Cascadas laterales para mayor disolución del detergente de agua
                                Bajo nivel de ruido</div>
                            <div class="tab-pane fade" id="list-messages" role="tabpanel"
                                aria-labelledby="list-messages-list">Voltaje	110 V
                                Posición de puerta	Superior
                                Tipo de controles	Digital
                                Dimensiones	Ancho 632mm, Profundo 670mm, Alto 1020mm
                                Tipo de Motor	Inverter
                                Puerta transparente	Si</div>
                        </div>
                    </div>
                </div>
                <div class="row ms-4 mt-3">
                    <div class="col-7 d-flex flex-nowrap justify-content-between">
                        <p class="fs-6 fs-lighter">Compartir:&nbsp;</p>
                        <a href=""><img
                                src="https://img.icons8.com/material-rounded/29/584342/facebook.png" />&nbsp;</a>
                        <a href=""><img src="https://img.icons8.com/windows/32/584342/instagram-new.png" />&nbsp;</a>
                        <a href=""><img src="https://img.icons8.com/ios/23/584342/whatsapp--v1.png" />&nbsp;</a>
                        <a href=""><img src="https://img.icons8.com/ios-filled/23/584342/twitter.png" />&nbsp;</a>
                    </div>

                </div>
            </div>
            <% }) %>
        </div>
        <p class="fs-3 mt-3">Comentarios</p>
        <% comments.forEach((data)=> { %>
        <div class="row">
            <div class="col-7 border-bottom">
                <p class="fs-6"><%= data.client %></p>
                <p class="fs-6"><%= data.comment %></p>
            </div>
            <% }) %>
        </div>
    </div>
    <%- include('footer.ejs') -%>