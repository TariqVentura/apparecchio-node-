<div class="col">
    <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
            aria-expanded="false" aria-controls="collapseExample">
            AÃ±adir a una lista
        </button>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="d-flex flex-row flex-wrap">
            <% orders.forEach((data)=> { %>
                <form action="/api/details" method="post">
                    <div class="my-2 mx-1">
                        <div class="card text-center">
                            <div class="card-header">
                                <%= data.status %>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= data.name %>
                                </h5>
                                <p class="card-text">
                                    <input type="text" name="product" value="<%= product.product %>" hidden>
                                    <input type="number" name="price" value="<%= product.price %>" hidden>
                                    <input type="number" max="<%= data.stock %>" min="1" name="amount" required>
                                    <input type="text" name="order" value="<%= data._id %>" hidden>
                                </p>
                                <button class="btn btn-primary" type="submit">AÃ±adir</button>
                            </div>
                            <div class="card-footer text-muted">
                                <%= data.date %>
                            </div>
                        </div>
                    </div>
                </form>
                <% }) %>
                    <div class="card text-center">
                        <div class="card-header">
                            Crear una nueva lista
                        </div>
                        <div class="card-body bg-dark">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary border-0" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                <img width="50" height="50"
                                    src="https://img.icons8.com/ios-filled/50/FFFFFF/add--v1.png" alt="add--v1" />
                            </button>

                            <!-- Modal -->
                            <div class="modal fade text-dark" id="exampleModal" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                Nueva Lista
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/api/orders" method="post">
                                            <div class="modal-body">
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text"
                                                        id="inputGroup-sizing-default">Nombre:
                                                    </span>
                                                    <input type="text" class="form-control"
                                                        aria-label="Sizing example input"
                                                        aria-describedby="inputGroup-sizing-default" name="name">
                                                </div>
                                                <div class="input-group mb-3" hidden>
                                                    <span class="input-group-text"
                                                        id="inputGroup-sizing-default">Nombre:
                                                    </span>
                                                    <input type="text" class="form-control"
                                                        aria-label="Sizing example input"
                                                        aria-describedby="inputGroup-sizing-default" name="user"
                                                        value="tariqventura99">
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cerrar</button>
                                                <button type="submit" class="btn btn-primary">Guardar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</div>